<div class="card" id="<%= dom_id episode %>">
  <div class="row no-gutters">
    <div class="col-md-8">
      <div class="card-body">
        <p class="card-text"><%= episode.published_at %></p>
        <h5 class="card-title"><%= episode.title %></h5>
        <p class="card-text">
          <%= episode.description %>
        </p>
      </div>
    </div>
    <div class="col-md-2">
      <div class="card d-flex align-items-center justify-content-center">
        <div class="card-body">
          <h5 class="card-title"><%= episode.duration %></h5>
          <p class="card-text">Duration</p>
        </div>
      </div>
    </div>
    <div class="col-md-2">
      <div class="card d-flex align-items-center justify-content-center">
        <div class="card-body">
          <a href="<%= episode.link %>" class="btn btn-primary">Download</a>
        </div>
      </div>
    </div>
  </div>
